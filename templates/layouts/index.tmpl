{{ define "layouts/index.tmpl" }}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ .title }}</title>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/informer.css" rel="stylesheet">
    </head>
    <body>
    <div class="container mt-2">
        <nav class="navbar navbar-expand-lg bg-light border_style">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Stats Informer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/github">GitHub</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Help
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">About</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="credits">
                        Made with <span class="page__icon page__icon_heart"></span> by <a href="https://flant.com" target="_blank">Flant</a>
                    </div>
                </div>
            </div>
        </nav>

        <h1 class="visually-hidden">Heroes examples</h1>

        <div class="px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold">Welcome to Stats Informer</h1>
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">Here you can track changes in the number of stars in the GitHub repositories that
                    you have subscribed to in the service</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/github" class="btn btn-outline-secondary btn-lg px-4">Start Tracking</a>
                </div>
            </div>
        </div>

    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
{{ end }}